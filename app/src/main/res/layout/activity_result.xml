<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_main_gradient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil Kuis"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="40dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="24dp"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skor Kamu:"
                android:textSize="20sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvSkorAngka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/10"
                android:textColor="#FF4081"
                android:textSize="48sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivResultStars"
                android:layout_width="wrap_content"  android:layout_height="wrap_content" android:src="@drawable/star_0" android:contentDescription="Hasil Bintang"
                android:layout_marginBottom="24dp"
                android:adjustViewBounds="true" /> <TextView
            android:id="@+id/tvFeedbackMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terus berlatih untuk menjadi lebih baik!"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnKembaliMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali ke Pilihan Level"
        android:background="@drawable/button_gradient"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp" />

</LinearLayout>