<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Shadow -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/logo"
                android:contentDescription="Logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kanakata"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF4081"
                android:gravity="left"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/logo"
                android:contentDescription="Profile"
                android:padding="8dp" />
        </LinearLayout>


        <!-- Greeting -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="こんにちは, User!"
            android:textStyle="bold"
            android:textColor="#FF4081"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lanjutkan perjalanan belajar bahasa Jepangmu"
            android:textColor="#666"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />


        <!-- Progress Belajar -->
        <LinearLayout
            android:id="@+id/progressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_card"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress Belajar Keseluruhan"
                android:textColor="#222"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#E0E0E0"
                android:max="100"
                android:progress="45"
                android:progressTint="#FF4081" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Level: Pemula"
                    android:textColor="#555"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvKata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120/350 kata"
                    android:textColor="#555"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- PILIH MATERI BELAJAR -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Materi Belajar"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />


        <!-- Container Materi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card Hiragana -->
            <LinearLayout
                android:id="@+id/btnHiragana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card"
                android:elevation="2dp"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="あ"
                    android:textSize="28sp"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hiragana"
                        android:textStyle="bold"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="46 karakter dasar"
                        android:textColor="#666"
                        android:layout_gravity="center_horizontal"
                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>

            <!-- Card Katakana -->
            <LinearLayout
                android:id="@+id/btnKatakana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card"
                android:elevation="2dp"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ア"
                    android:textSize="28sp"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Katakana"
                        android:textStyle="bold"
                        android:textColor="#222"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="46 karakter dasar"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#666"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Card Kanji -->
            <LinearLayout
                android:id="@+id/btnKanji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card"
                android:elevation="2dp"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="漢"
                    android:textSize="28sp"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kanji"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textColor="#222"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000+ karakter"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#666"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout" />

    </LinearLayout>
</ScrollView>
