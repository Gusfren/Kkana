<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    card_view:cardBackgroundColor="@color/white">

    <LinearLayout
        android:id="@+id/itemHurufLayout"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/tvHuruf"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="あ"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#FF4081" />

        <TextView
            android:id="@+id/tvRomaji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a"
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/tvTerjemahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="terjemahan"
            android:textSize="14sp"
            android:textColor="#999999"
            android:textStyle="italic"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btnSpeaker"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_speaker"
            android:contentDescription="Putar suara"
            android:clickable="false"
            android:focusable="false"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>